<header class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Arg.", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li>
						<%= link_to "Início", root_path %>
					</li>
					<% if signed_in? %>
					<li>
						<%= link_to "Usuários", users_path %>
					</li>
					<% if current_user.admin? %>
					<li>
						<%= link_to "Casos", facts_path %>
					</li>
					<% end %>
					<li>
						<%= link_to "Perquisar", arguments_path %>
					</li>					
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="icon-user"></i> <%= current_user.name %> <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to "Perfil", current_user %>
							</li>
							<li>
								<%= link_to "Configurações", edit_user_path(current_user) %>
							</li>
							<li>
								<%= link_to "Sair", signout_path, method: "delete" %>
							</li>
						</ul>
					</li>
					<% else %>
					<li>
						<%= link_to "Entrar", signin_path %>
					</li>
					<% end %>
					<li>
						<%= link_to "Ajuda", help_path %>
					</li>
				</ul>
			</nav>
		</div>
	</div>
</header>