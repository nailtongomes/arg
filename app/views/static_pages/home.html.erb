<% if signed_in? %>
<div class="row">
	<aside class="span12">
		<div>
			<a class="close" data-dismiss="alert" href="#">&times;</a>
			<h1>[ Caso da Semana ] </h1>
			<%= render 'facts/fact' %>
			<% if current_user.admin? %>
			<div class="alert alert-success">
				<%= render 'shared/fact_form' %>
				<a data-toggle="modal" href="#myModal" class="btn btn-primary btn-large">Novo caso</a> |
				<%= link_to "Excluir", @f, method: :delete, confirm: "Tem certeza?", class: "btn btn-large btn-danger" %>
			</div>
			<% end %>
		</div>
	</aside>
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<%= render 'shared/argument_form' %>
		</section>
	</aside>
	<div class="span8">
		<h3>Argumentos</h3>
		<%= render 'shared/feed' %>
	</div>
</div>
<% else %>
<div class="center hero-unit">
	<h1>Bem vindo ao Arg.</h1>

	<h2> O Assistente de Argumentação Jurídica (ARG.) irá auxiliá-lo no armazenamento, produção e aprimoramento de argumentos jurídicos. </h2>

	<%= link_to "Cadastre-se!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>