<%= form_for(@argument) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.text_area :content, :placeholder => "Argumente aqui..."%>

<div class="pull-right">
	<%= f.submit "Inserir", class: "btn btn-large btn-primary", :disable_with => "Aguarde..." %>
</div>
<%= link_to "Ajuda para argumentar", sandargs_path, class: "btn btn-large btn-info" %>

<% end %>