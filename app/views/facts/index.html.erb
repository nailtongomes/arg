<% provide(:title, 'Casos') %>
<% if @facts.any? %>
<% @facts.each do |f| %>
<div class="well">
	<h3>Caso [ <%= f.id %> ] - Criado em [ <%= f.created_at %> ]
	<%= link_to "Excluir", f, method: :delete, confirm: "Tem certeza?", class: "btn btn-small btn-danger" %>
	</h3> 
	<p>
		<%= textilize f.content %>
	</p>
	<h3>Problema</h3>
	<p>
		<%= textilize f.problem %>
	</p>
</div>
<% end %>
<% end %>
<%= render 'form' %>
<div class="alert alert-success">
<a data-toggle="modal" href="#myModal" class="btn btn-primary btn-large">Novo caso</a>
</div>