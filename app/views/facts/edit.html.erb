<% provide(:title, 'Editando Casos') %>
<div class="row">
	<div class="span10 offset1">
		<h1>Editando Caso</h1>
		<hr/>
		<%= form_for(@fact) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<p>
			Fatos/Dados do Caso:
		</p>
		<%= f.text_area :content, :placeholder => "Quais os fatos?", :rows => "5"%>
		<hr/>
		<p>
			Problema:
		</p>
		<%= f.text_area :problem, :placeholder => "Qual o problema?", :rows => "5"%>
		<hr/>
		<p>
			Orientação/Guia:
		</p>
		<%= f.text_area :orientation, :placeholder => "Orientação...", :rows => "5"%>
	</div>
	<div class="span10 offset1">
		<div class="span4">
			Data de Publicação:
			<br/>
			<div class="span2">
				<%= f.text_field :ini_term_date, :class => 'datepicker', :size => 10, :maxlength => 10 %>
			</div>
			<div class="span1 pull-right">
				<%= f.text_field :ini_term_time, :size => 5, :maxlength => 5 %>
			</div>
		</div>
		<div class="span4 pull-right">
			Data de Termo:
			<br/>
			<div class="span2">
				<%= f.text_field :fin_term_date, :class => 'datepicker', :size => 10, :maxlength => 10 %>
			</div>
			<div class="span1 pull-right">
				<%= f.text_field :fin_term_time, :size => 5, :maxlength => 5 %>
			</div>
		</div>
	</div>
	<div class="span10 offset1">
		<hr/>
		<div class="pull-right">
			<% if current_user.admin? %>
			Ativo? <%= f.check_box :active %>
			<% end %>
			<%= f.submit "Gravar", class: "btn btn-large btn-primary", :disable_with => "Aguarde..." %>
		</div>
		<% end %>
	</div>
</div>
<% if current_user.show_html? %>
<% content_for :script do %>
<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">
	bkLib.onDomLoaded(function() {
		nicEditors.allTextAreas({
			fullPanel : true
		});
	}); 
</script>
<% end %>
<% end %>